<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Healthcare MVP{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/style.css') }}">
  </head>
  <body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-white bg-white shadow-sm">
      <div class="container">
        <a class="navbar-brand d-flex align-items-center gap-2" href="/">
          <img src="{{ url_for('static', filename='images/logo.jpg') }}" height="40" alt="logo" />
          <strong>HealthCare</strong>
        </a>
        <div class="ms-auto d-flex align-items-center gap-2">
          {% if session.get('user_id') %}
            <span class="me-2">Hello, {{ session.get('user_name') }}</span>
            <a class="btn btn-outline-secondary" href="{{ url_for('main.logout') }}">Logout</a>
          {% else %}
            <a class="btn btn-outline-primary me-2" href="{{ url_for('login') }}">Login</a>
            <a class="btn btn-primary" href="{{ url_for('signup') }}">Sign up</a>
          {% endif %}
        </div>
      </div>
    </nav>

    <main class="container py-5">
      {% block content %}{% endblock %}
    </main>

    <footer class="text-center py-4">
      <small class="text-muted">MVP Healthcare • Appointment → Prescription → Pharmacy</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ url_for('static', filename='js/main.js') }}"></script>
  </body>
</html>
